@model Oef2.PresentationModels.PMRegistration
<h1>New Registration</h1>
<h3>Registration</h3>
<div class="col-lg-12">
    <form asp-action="Overview" asp-controller="register" method="post">
        <div class="form-group">
            <label for="name">Name</label>
            <input asp-for="@Model.newRegistration.Naam" class="form-control" />
        </div>
        <div class="form-group">
            <label for="firstname">Firstname</label>
            <input asp-for="@Model.newRegistration.Voornaam" class="form-control" />
        </div>
        <div class="form-group">
            <label>Age</label>
            <input asp-for="@Model.newRegistration.Leeftijd" class="form-control" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input asp-for="@Model.newRegistration.Email" class="form-control" />
        </div>

        <p>Pick your sessions</p>
        <div class="form-group">
            <label>Slot1</label>
            <select asp-items="@Model.Slot1" asp-for="@Model.newRegistration.SelectedSlot1" class="form-control" >
            </select>
        </div>
        <div class="form-group">
            <label>Slot2</label>
            <select asp-items="@Model.Slot2" asp-for="@Model.newRegistration.SelectedSlot2" class="form-control"></select>
        </div>
        <div class="form-group">
            <label>Slot3</label>
            <select asp-items="@Model.Slot3" asp-for="@Model.newRegistration.SelectedSlot3" class="form-control"></select>
        </div>
        <p>Are you wearing dangerous accessoires</p>
       
            @foreach (var item in @Model.Devices) {
                <div class="form-group">
                    <label>@item.Name</label>
                    <input type="checkbox" name="newRegistration.Accessoires[]" value="@item.Id" />
                </div>

            }
        
        <div class="form-group">
            <label>Organisation</label>
            <select asp-for="@Model.newRegistration.SelectedOrganization" asp-items="@Model.Organizations" class="form-control"></select>
        </div>

        <div class="form-group">
            <label>Are you coming to the closing party?</label>
            <input asp-for="@Model.newRegistration.ClosingParty" />
        </div>

        <input type="submit" name="Save" value="Check" class="btn" />
    </form>
</div>
